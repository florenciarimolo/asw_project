<%= form_with(model: comment, local: true) do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
   
  <div class="field form-group col-md-8">
    <%= form.label :issue %>
    <%= form.collection_select :issue , Issue.all.map{@issue [@issue.title]}, {}, class: "form-control", :prompt => "Select One", type="issue"  %>
  </div>
  
  <div class="field form-group col-md-8">
    <%= form.label :user %>
    <%= form.select :user, User.all.map{|c| [c.username, c.username]}, {}, class: "form-control", :prompt => "Select One"  %>
  </div>
  
  <div class="text_area form-group col-md-8">
    <%= form.label :comment %>
    <%= form.text_area :comment, id: :comment_comment, class: "form-control" %>
  </div>
    
  <div class="actions submit-button col-md-8">
    <%= form.submit "Comment", class: "btn btn-default btn-primary" %>
  </div> 
<% end %>
