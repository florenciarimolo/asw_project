<%= form_for @comment, # url: {action="create" , params {:issue_id => @issue.id}},
:html => {:class => "form-horizontal center"} do |form| %>

    <% if comment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

          <ul>
            <% comment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <% if params[:action] == "new" %>
    <%= form.hidden_field :issue_id, { :value => @issue.id} %>
    <% end %>

    <div class="field form-group col-md-8">
      <%= form.label :user %>
      <%= form.select :user, User.all.map {|c| [c.username, c.username]}, {}, class: "form-control", :prompt => "Select One" %>
    </div>

    <div class="text_area form-group col-md-8">
      <%= form.label :comment %>
      <%= form.text_area :comment, id: :comment_comment, class: "form-control" %>
    </div>

    <div class="actions submit-button col-md-8">
      <%= form.submit "Comment", class: "btn btn-default btn-primary" %>
    </div>
<% end %>
