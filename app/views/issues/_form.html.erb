<%= form_with(model: issue, local: true) do |form| %>
  <% if issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
      <% issue.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :issue_title %>
  </div>

  <div class="field">
    <%= form.label :kind, id: :issue_kind %>
    <select name="kind" >
        <option selected disabled>Choose an option</option> 
        <option value="1">bug</option> 
        <option value="2">enhancement</option> 
        <option value="3">proposal</option>
        <option value="4">task</option> 
    </select>
    <!--<%= form.text_field :kind, id: :issue_kind %> -->
  </div>
  
  <div class="field">
    <%= form.label :priority, id: :issue_priority %>
    <select name="priority">
        <option selected disabled>Choose an option</option> 
        <option value="1">trivial</option> 
        <option value="2">minor</option> 
        <option value="3">major</option>
        <option value="4">critical</option>
        <option value="5">blocker</option> 
    </select>
    <!--<%= form.text_field :priority, id: :issue_priority %> -->
  </div>  
  
  <div class="field">
    <%= form.label :status %>
    <%= form.text_field :status, id: :issue_status %>
  </div>

  <div class="field">
    <%= form.label :votes %>
    <%= form.number_field :votes, id: :issue_votes %>
  </div>

  <div class="field">
    <%= form.label :assignee %>
    <%= form.text_field :assignee, id: :issue_assignee %>
  </div>

  <div class="field">
    <%= form.label :created %>
    <%= form.datetime_select :created, id: :issue_created %>
  </div>

  <div class="field">
    <%= form.label :updated %>
    <%= form.datetime_select :updated, id: :issue_updated %>
  </div>

  <div class="text_area">
    <%= form.label :description %>
    <%= form.text_area :description, id: :issue_description %>
  </div>

  <div class="actions" onCLick="guardarElementosSeleccionados()">
    <h4><%= form.submit %></h4>
  </div>
<% end %>
